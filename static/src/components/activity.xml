<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.Activity.Comment" t-inherit="mail.Activity" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o_Activity_core')]" position="inside">
            <div class="o_activity_comment_panel_wrapper mt-2" style="width: 100%; max-width: 100%;"
                  t-att-data-activity-id="activityView.activity.id">
                <!-- Button to toggle -->
                <a href="#" role="button" class="o_activity_comment_btn btn btn-link text-primary p-0 mb-2 d-flex align-items-center"
                      t-on-click.prevent="activityView.toggleComments"
                      style="position: relative; z-index: 100; pointer-events: auto;">
                    <i class="fa fa-commenting-o me-1"/>
                    <span>
                        <t t-if="activityView.activity.commentModel">
                            <t t-esc="activityView.activity.commentModel.getToggleText()"/>
                        </t>
                        <t t-else="">
                            <t t-esc="' Add a Comment'"/>
                        </t>
                    </span>
                </a>

                <div t-if="activityView.activity.commentModel and activityView.activity.commentModel.showComments" 
                     t-ref="commentPanel" class="border rounded-3 bg-view"
                     style="visibility: visible !important; display: block !important; position: relative !important; z-index: 1000 !important;">
     
                    <!-- Messages will be rendered by JavaScript directly -->
                    
                    <!-- Native Odoo Log note style input -->
                    <div t-if="activityView.activity.commentModel.needsComposer" 
                         class="d-flex p-3">
                        <!-- Avatar -->
                        <img class="me-2 rounded-circle" 
                             src="/web/image?model=res.users&amp;field=avatar_128&amp;id=2" 
                             alt="Avatar" style="width: 40px; height: 40px;"/>
                        
                        <!-- Input area -->
                        <div class="flex-grow-1">
                            <textarea class="form-control" 
                                    style="min-height: 80px; resize: vertical;"
                                    placeholder="Write your message here..."
                                    t-model="activityView.activity.commentModel.commentText"
                                    t-on-focus="activityView.activity.commentModel.onFocusTextarea"
                                    t-on-keydown="activityView.activity.commentModel.onKeydownTextarea"
                                    t-on-keyup="activityView.activity.commentModel.onKeyupTextarea"
                                    t-on-click="activityView.activity.commentModel.onClickTextarea"
                                    oninput="console.log('Activity textarea input:', this.value);"></textarea>
                            
                            <!-- Bottom toolbar -->
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <!-- Left side - tool buttons -->
                                <div class="d-flex">
                                    <button class="btn btn-light btn-sm me-1" type="button"
                                            title="Emojis" aria-label="Emojis"
                                            t-on-click="activityView.activity.commentModel.toggleEmoji">
                                        <i class="fa fa-smile-o"/>
                                    </button>
                                    <button class="btn btn-light btn-sm" type="button"
                                            title="Add attachment" aria-label="Add attachment"
                                            t-on-click="activityView.activity.commentModel.uploadFile">
                                        <i class="fa fa-paperclip"/>
                                    </button>
                                </div>
                                
                                <!-- Right side - send button -->
                                <button class="btn btn-primary btn-sm"
                                        type="button"
                                        t-on-click="activityView.activity.commentModel.submitComment">
                                    SEND
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div t-if="activityView.activity.commentModel.commentCount == 0 and !activityView.activity.commentModel.needsComposer" 
                         class="o_comment_thread_container p-3">
                        <p class="text-muted text-center p-2">No comments yet</p>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>