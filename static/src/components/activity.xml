<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.Activity.Comment" t-inherit="mail.Activity" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o_Activity_core')]" position="inside">
            <div class="o_activity_comment_panel_wrapper" style="margin-top: 8px; width: 563px;">

                <!-- Button to toggle -->
                <a href="#" role="button" class="o_activity_comment_btn btn btn-link text-action p-0 me-3"
                      t-on-click="activityView.toggleComments"
                      style="margin-bottom: 8px;">
                    <i class="fa fa-commenting"/>
                    <t t-if="activityView.activity.commentModel">
                        <t t-if="activityView.activity.commentModel.showComments">
                            <t t-esc="' Hide Comments'"/>
                        </t>
                        <t t-elif="activityView.activity.commentModel.commentCount > 0">
                            <t t-esc="' See Comments (' + activityView.activity.commentModel.commentCount + ')'"/>
                        </t>
                        <t t-else="">
                            <t t-esc="' Add a Comment'"/>
                        </t>
                    </t>
                    <t t-else="">
                        <t t-esc="' Add a Comment'"/>
                    </t>
                </a>

                <div t-if="activityView.activity.commentModel and activityView.activity.commentModel.showComments" class="o_activity_comments_container" t-ref="commentPanel" style="background-color: #e7e9ed;">
                    <!-- Thread with messages and composer -->
                    <t t-if="activityView.activity.commentModel.thread">
                        <Thread
                            thread="activityView.activity.commentModel.thread"
                            order="'asc'"
                            showEmptyMessage="false"
                            showJumpPresent="false"
                            showDates="false"
                        />
                        <!-- Add the composer using thread.composer -->
                        <div class="o_activity_comments_composer" style="margin-top: 8px;">
                            <Composer
                                placeholder="'Add a Comment...'"
                                composer="activityView.activity.commentModel.thread.composer"
                                type="'note'"
                                showFullComposer="false"
                                mode="'extended'"
                                allowUpload="true"
                            />
                        </div>
                    </t>
                    <t t-else="">
                        <div class="text-muted p-2">No thread available for this activity</div>
                    </t>
                </div>
            </div>
        </xpath>
    </t>
</templates>