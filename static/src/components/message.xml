<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.Message.ActivityComment" t-inherit="mail.Message" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o_Message_content')]" position="after">
            <div t-if="messageView.message.subtype_id and messageView.message.subtype_id[0] == 3" class="o_activity_comment_panel_wrapper" style="margin-top: 3px; width: 563px;">
                <a href="#" role="button" class="o_activity_comment_btn btn btn-link text-action p-0 me-3"
                      t-on-click="messageView.toggleComments"
                      style="margin-bottom: 8px;">
                    <i class="fa fa-commenting"/>
                    <t t-if="messageView.message.commentModel">
                        <t t-if="messageView.message.commentModel.showComments">
                            <t t-esc="' Hide Comments'"/>
                        </t>
                        <t t-elif="messageView.message.commentModel.commentCount > 0">
                            <t t-esc="' See Comments (' + messageView.message.commentModel.commentCount + ')'"/>
                        </t>
                        <t t-else="">
                            <t t-esc="' Add a Comment'"/>
                        </t>
                    </t>
                    <t t-else="">
                        <t t-esc="' Add a Comment'"/>
                    </t>
                </a>

                <div t-if="messageView.message.commentModel and messageView.message.commentModel.showComments" class="o_activity_comments_container" t-ref="commentPanel" style="background-color: #e7e9ed;">
                    <!-- Thread with messages -->
                    <t t-if="messageView.message.commentModel.thread">
                        <Thread
                            thread="messageView.message.commentModel.thread"
                            order="'asc'"
                            showEmptyMessage="false"
                            showJumpPresent="false"
                            showDates="false"
                        />
                        <div class="o_activity_comments_composer" style="margin-top: 8px;">
                            <Composer
                                placeholder="'Add a Comment...'"
                                composer="messageView.message.commentModel.thread.composer"
                                type="'note'"
                                showFullComposer="false"
                                mode="'extended'"
                                allowUpload="true"
                            />
                        </div>
                    </t>
                    <t t-else="">
                        <div class="text-muted p-2">No thread available for this activity</div>
                    </t>
                </div>
            </div>
        </xpath>
    </t>
</templates>