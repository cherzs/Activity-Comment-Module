<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mailActivityCustom" t-inherit="mail.Activity" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'o-mail-Activity-note')]" position="after">
            <div class="o_activity_comment_panel_wrapper" style="margin-top: 8px; max-width: 100%; width: 563px;">
                <!-- Error message -->
                <div t-if="state.error" class="alert alert-danger" role="alert" style="margin-bottom: 8px; padding: 8px 12px; font-size: 13px;">
                    <i class="fa fa-exclamation-circle me-2"/>
                    <span t-esc="state.error"/>
                </div>

                <!-- Button to toggle -->
                <span class="o-mail-Activity-comment btn btn-link text-action p-0 me-3"
                      t-on-click="toggleComments"
                      style="margin-bottom: 8px;">
                    <i class="fa fa-commenting"/>
                    <t t-esc="getToggleText()"/>
                </span>

                <!-- Comments panel -->
                <div t-if="state.showComments" 
                     class="o_activity_comments_container" 
                     t-ref="commentPanel" 
                     style="background-color: #e7e9ed; border-radius: 6px; padding: 18px 16px 12px 16px;">
                     <Thread 
                        thread="state.thread"
                        order="'asc'"
                        showEmptyMessage="false"
                        showJumpPresent="false"
                        showDates="false"
                    />
                    <div class="o_activity_comments_composer" style="background: #f0f2f5; border-radius: 8px; padding: 10px 12px">
                        <Composer
                            placeholder="state.texts.addCommentPlaceholder"
                            composer="state.thread.composer"
                            type="'note'"
                            showFullComposer="false"
                            mode="'extended'"
                            allowUpload="true"
                        />
                    </div>
                    <div class="o_activity_comments_no_comments" t-if="!state.thread" style="text-align: center; color: #666; padding: 12px;">
                        No comments yet
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>