<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mailActivityCustom" t-inherit="mail.Activity" t-inherit-mode="extension">
        <xpath expr="//div[contains(@class, 'o-mail-Activity-note')]" position="after">
            <div class="o_activity_comment_panel_wrapper" style="margin-top: 8px; max-width: 100%; width: 563px;">
                <!-- Error message -->
                <div t-if="state.error" class="alert alert-danger" role="alert" style="margin-bottom: 8px; padding: 8px 12px; font-size: 13px;">
                    <i class="fa fa-exclamation-circle me-2"/>
                    <span t-esc="state.error"/>
                </div>

                <!-- Button to toggle -->
                <span class="o-mail-Activity-comment btn btn-link text-action p-0 me-3"
                      t-on-click="toggleComments"
                      style="margin-bottom: 8px;">
                    <i class="fa fa-commenting"/>
                    <t t-esc="getToggleText()"/>
                </span>

                <!-- Comments panel -->
                <div t-if="state.showComments" 
                     class="o_Activity_comments_panel o_activity_comments_container" 
                     t-ref="commentPanel" 
                     style="background-color: #e7e9ed; border-radius: 6px; padding: 18px 16px 12px 16px; max-height: 400px; overflow-y: auto;">
                    <!-- Render comments above composer -->
                    <div t-if="state.comments.length" class="o_activity_comments_list">
                        <t t-foreach="state.comments" t-as="comment" t-key="comment.id">
                            <div class="o-mail-Thread" style="display: flex; align-items: flex-start; margin-bottom: 12px;">
                                <div style="width: 36px; height: 36px; border-radius: 6px; background: [[ comment.avatarColor ]]; color: #fff; display: flex; align-items: center; justify-content: center; font-weight: 600; font-size: 18px; margin-right: 12px; flex-shrink: 0; border: 1px solid #e0e3ea;">
                                    <t t-if="comment.avatarUrl">
                                        <img t-att-src="comment.avatarUrl" style="width:36px;height:36px;border-radius:6px;object-fit:cover;"/>
                                    </t>
                                    <t t-else="">
                                        <t t-if="comment.author &amp;&amp; comment.author.name" t-esc="comment.author.name[0].toUpperCase()"/>
                                        <t t-if="!comment.author || !comment.author.name">?</t>
                                    </t>
                                </div>
                                <div style="flex: 1;">
                                    <div style="font-weight: bold; color: #444; font-size: 15px;">
                                        <span t-if="comment.author" t-esc="comment.author.name"/>
                                    </div>
                                    <div style="font-size: 14px; color: #222; margin: 4px 0;">
                                        <span t-out="comment.body"/>
                                    </div>
                                    <div class="text-muted" style="font-size: 12px;">
                                        <span t-esc="comment.create_date"/>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>
                    <t t-if="state.thread">
                        <Thread
                            thread="state.thread"
                            order="'asc'"
                            showEmptyMessage="false"
                            showJumpPresent="false"
                            showDates="false"
                        />
                    </t>
                    <div class="o_activity_comments_composer" style="background: #f0f2f5; border-radius: 8px; padding: 10px 12px; margin-top: 12px;">
                        <Composer
                            t-if="state.thread and state.thread.composer"
                            placeholder="state.texts.addCommentPlaceholder"
                            composer="state.thread.composer"
                            type="'note'"
                            showFullComposer="false"
                            mode="'extended'"
                            allowUpload="true"
                        />
                    </div>
                    <div class="o_activity_comments_no_comments" t-if="!state.thread" style="text-align: center; color: #666; padding: 12px;">
                        No comments yet
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>