<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="mail.Message.ActivityComment" t-inherit="mail.Message" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('o_Message')]" position="attributes">
            <attribute name="t-att-data-message-id">messageView.message.id</attribute>
        </xpath>
        <xpath expr="//div[hasclass('o_Message_content')]" position="after">
            <div t-if="messageView.message.model and messageView.message.model.includes('mail.activity') || 
                        (messageView.message.body and (
                          messageView.message.body.includes('To Do done') || 
                          messageView.message.body.includes('done') || 
                          messageView.message.body.includes('completed') ||
                          messageView.message.body.includes('To Do') ||
                          messageView.message.body.includes('marked as done')
                        ))" 
                  class="o_activity_comment_panel_wrapper mt-2 o_comment_panel_consistent" style="width: 100%;"
                  t-att-data-message-id="messageView.message.id">
                <a href="#" role="button" class="o_activity_comment_btn btn btn-link text-primary p-0 mb-2 d-flex align-items-center"
                      t-on-click.prevent="messageView.toggleComments" 
                      style="position: relative; z-index: 100; pointer-events: auto;">
                    <i class="fa fa-commenting-o me-1"/>
                    <span>
                        <t t-if="messageView.message.commentModel">
                            <t t-esc="messageView.message.commentModel.getToggleText()"/>
                        </t>
                        <t t-else="">
                            <t t-esc="' Add a Comment'"/>
                        </t>
                    </span>
                </a>

                <div t-if="messageView.message.commentModel and messageView.message.commentModel.showComments" 
                     t-ref="commentPanel" class="border rounded-3 bg-view"
                     style="visibility: visible !important; display: block !important; position: relative !important; z-index: 1000 !important;">
                    <!-- Messages will be rendered by JavaScript directly -->
                    
                    <!-- Native Odoo Log note style input -->
                    <div t-if="messageView.message.commentModel.needsComposer" 
                         class="d-flex p-3">
                        <!-- Avatar -->
                        <img class="me-2 rounded-circle" 
                             src="/web/image?model=res.users&amp;field=avatar_128&amp;id=2" 
                             alt="Avatar" style="width: 40px; height: 40px;"/>
                        
                        <!-- Input area -->
                        <div class="flex-grow-1">
                            <textarea class="form-control" 
                                    style="min-height: 80px; resize: vertical;"
                                    placeholder="Write your message here..."
                                    t-model="messageView.message.commentModel.commentText"
                                    t-on-focus="messageView.message.commentModel.onFocusTextarea"
                                    t-on-keydown="messageView.message.commentModel.onKeydownTextarea"
                                    t-on-keyup="messageView.message.commentModel.onKeyupTextarea"
                                    t-on-click="messageView.message.commentModel.onClickTextarea"
                                    oninput="console.log('Message textarea input:', this.value);"></textarea>
                            
                            <!-- Bottom toolbar -->
                            <div class="d-flex justify-content-between align-items-center mt-2">
                                <!-- Left side - tool buttons -->
                                <div class="d-flex">
                                    <button class="btn btn-light btn-sm me-1" type="button"
                                            title="Emojis" aria-label="Emojis"
                                            t-on-click="messageView.message.commentModel.toggleEmoji">
                                        <i class="fa fa-smile-o"/>
                                    </button>
                                    <button class="btn btn-light btn-sm" type="button"
                                            title="Add attachment" aria-label="Add attachment"
                                            t-on-click="messageView.message.commentModel.uploadFile">
                                        <i class="fa fa-paperclip"/>
                                    </button>
                                </div>
                                
                                <!-- Right side - send button -->
                                <button class="btn btn-primary btn-sm"
                                        type="button"
                                        t-on-click="messageView.message.commentModel.submitComment">
                                    SEND
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div t-if="messageView.message.commentModel.commentCount == 0 and !messageView.message.commentModel.needsComposer" 
                         class="o_comment_thread_container p-3">
                        <p class="text-muted text-center p-2">No comments yet</p>
                    </div>
                </div>
            </div>
        </xpath>
    </t>
</templates>